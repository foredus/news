<nav aria-label="Pagination">
  <ul class="pagination">
    <li class="page-item <%= !previousPage ? 'disabled' : '' %>">
      <a class="page-link" href="<%= baseLink + 'page=' + previousPage %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>

    <li class="page-item active">
      <a class="page-link" href="<%= baseLink + 'page=' + currentPage %>"><%= currentPage %></a>
    </li>

    <li class="page-item <%= !nextPage ? 'disabled' : '' %>">
      <a class="page-link" href="<%= baseLink + 'page=' + nextPage %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
