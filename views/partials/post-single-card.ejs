<div class="card mb-3">
  <div class="card-body">
    <h4 class="card-title">
      <a href="<%= post.url %>" target="_blank">
        <%= post.title %>
      </a>
    </h4>
    <p class="card-text">
      <% if (post.imageUrl !== undefined) { %>
        <a href="<%= post.url %>" target="_blank">
          <img class="float-left mr-3" style="max-width: 200px; height: auto;" src="<%= post.imageUrl %>">
        </a>
      <% } %>
      <%= post.summary %>
    </p>
  </div>
  <div class="card-footer text-center">
    <div class="row">
      <div class="col-md-6 text-md-left">
        <%= sails.config.globals.moment(post.publishedAt).format('LLL') %>
      </div>
      <div class="col-md-6 text-md-right">
        <% if (post.source) { %>
          <a href="<%= post.source.siteUrl %>" target="_blank">
            <%= post.source.title %>
            <% if (post.source.logo && post.source.logo.url) { %>
              <img class="float-right ml-2" style="max-width: 24px; height: auto;" src="<%= post.source.logo.url %>">
            <% } %>
          </a>
        <% } %>
      </div>
    </div>
  </div>
</div>
